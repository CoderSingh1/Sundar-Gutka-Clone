<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PaathApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryContainer">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/kesari</item>
        <item name="colorSecondaryContainer">@color/kesari</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/navy</item>
        <item name="android:windowBackground">@color/kesari</item>

        <item name="android:textColorPrimary">@color/navy</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <item name="navigationViewStyle">@style/Widget.PaathApp.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.PaathApp.Toolbar</item>
    </style>

    <style name="Widget.PaathApp.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/navy</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="Widget.PaathApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/navy</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="Theme.PaathApp.NoActionBar" parent="Theme.PaathApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




</resources>
