<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.PaathApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kesari</item>
        <item name="colorSecondaryVariant">@color/kesari_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/kesari</item>
        <!-- Navigation view background -->
        <item name="navigationViewStyle">@style/Widget.PaathApp.NavigationView</item>
        <!-- Toolbar theme -->
        <item name="toolbarStyle">@style/Widget.PaathApp.Toolbar</item>
    </style>

    <!-- NoActionBar variant for splash screen -->
    <style name="Theme.PaathApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.PaathApp.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/navy</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="Widget.PaathApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/navy</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
</resources> 